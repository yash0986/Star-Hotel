<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <pre>

    </pre>
    <h1>All Hotels</h1>
    <!-- <div>
        <a href="/hotels/new">Add Hotels</a>
    </div> -->
    
    <% for(let camp of hotels) {%>
          <div class="card mb-3" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length){ %>
                            <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                        <% } else {%>
                            <img class="img-fluid" alt="" src="https://res.cloudinary.com/dfpfysd65/image/upload/v1686471764/YelpCamp/architecture-signs_xwjyha.png">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                        <h5 class="card-title"><%=camp.title%></h5>
                        <p class="card-text"><%=camp.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/hotels/<%=camp._id%>">view <%=camp.title%></a>
                        </div>
                    </div>
                </div>
          </div> 
    <% }%>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const hotels= {features : <%- JSON.stringify(hotels)%> }
    </script>
    <script src="/javascripts/clusterMap.js"></script>
    